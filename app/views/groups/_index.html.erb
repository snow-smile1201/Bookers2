  <table class="table">
    <thead>
      <tr>
        <th>Image</th>
        <th>Name</th>
        <th>Members</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% groups.each do |group| %>
        <tr>
          <td>
            <%= image_tag group.get_group_image(50, 50) %>
          </td>
          <td><%= link_to group.name, group_path(group) %></td>
          <td> <%= group.group_users.count + 1 %></td>
          <%if group.owner_id == current_user.id %>
            <td><%= link_to "edit", edit_group_path(group), class: "btn btn-success btn-sm" %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>