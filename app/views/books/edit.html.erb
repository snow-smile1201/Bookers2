  <div class="container px-5 px-sm-0">
    <%= render 'layouts/error_msg', obj: @book %>
    <div class="row">
      <div class="col">
        <h2>Editing Book</h2>
        <%= form_with model: @book do |f| %>
          <p>Title</p>
          <%= f.text_field :title %>
          <p>Opinion</p>
          <%= f.text_area :body%>
          <div>
            <%= f.submit 'Update Book'%>
          </div>
          <% end %>
          <span><%= link_to 'Show', book_path(@book.id) %></span>
          <span> | </span>
          <span><%= link_to 'Back', books_path %></span>
      </div>
    </div>
  </div>