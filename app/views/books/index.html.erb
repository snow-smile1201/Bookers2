<div class="container px-5 px-sm-0">
   <%= render 'layouts/error_msg', obj: @book %>
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      <%= render 'list', user: @user %>
      <h2 class="mt-3">New Book</h2>
      <%= render 'form', book: @book %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td>
                <%= link_to user_path(book.user.id) do %>
                  <%= image_tag book.user.get_profile_image(100, 100) %>
                <% end %>
            </td>
            <td>
              <%= link_to book_path(book.id) do %>
                <%= book.title %>
              <% end %>
            </td>
            <td><%= book.body %></td>

          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>