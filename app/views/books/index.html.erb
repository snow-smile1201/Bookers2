<div class="container px-sm-0">
   <%= render 'layouts/error_msg', obj: @book %>
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
      <%= render 'list', user: current_user %>
      <h2 class="mt-3">New Book</h2>
      <%= render 'form', book: @book %>
    </div>
    <div class="col-md-8">
      <h2>Books</h2>
      <p>
        <%= link_to '新しい順 ', books_path(latest: "ture") %>
        |<%= link_to ' 古い順 ', books_path(old: "ture") %>
        |<%= link_to ' 評価の高い順', books_path(star_count: "ture") %>
      </p>
      <%= render 'index',books: @books %>
    </div>
  </div>
</div>