<h2>Books#index全ユーザーの投稿表示</h2>
<h2>User info</h2>
<%= image_tag @user.get_profile_image(100, 100) %>
<p>name　<%= @user.name %></p>
<p>introduction <%= @user.introduction %></p>
<%= link_to "Edit", edit_user_path(current_user.id) %>

<h2>New Book</h2>

<%= form_with model: @book, local: true do |f| %>
  <div class="field">
    <label>Title</label>
 <div><%= f.text_field :title %></div>
  </div>
  <div class="field">
    <label>Body</label>
  <div><%= f.text_area :body %></div>
  </div>
  <div>
    <%= f.submit 'Create Book' %>
  </div>
<% end %>

<h2>Books</h2>
<table>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td>
          <%= link_to user_path(book.user_id) do %>
            <%= image_tag book.user.get_profile_image(100, 100) %>
          <% end %>
      </td>
      <td>
        <%= link_to book_path(book.id) do %>
          <%= book.title %>
        <% end %>
      </td>
      <td><%= book.body %></td>

    </tr>
    <% end %>
  </tbody>
</table>