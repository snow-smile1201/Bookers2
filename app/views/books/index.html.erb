<<h2>Books</h2>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Boby</th>
      <th colspan3></th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td><%= link_to 'Show', book_path(book.id) %></td>
      <td><%= link_to "Edit", edit_book_path(book.id) %></td>
      <td class><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %></td>
    </tr>
    <% end %>
  </tbody>
</table>


<h4>New Book</h4>
<div class="error-message">
  <% if @book.errors.any? %>
  <p><%= @book.errors.count %>errors prohibited this book from being saved:</p>
  <ul>
    <% @book.errors.full_messages.each do |message| %>

    <li><%= message %></li>

    <% end %>
  </ul>
<% end %>
</div>

<%= form_with model: @book, local: true do |f| %>
  <div class="field">
    <label>Title</label>
 <div><%= f.text_field :title %></div>
  </div>
  <div class="field">
    <label>Body</label>
  <div><%= f.text_area :body %></div>
  </div>
  <div>
    <%= f.submit 'Create Book' %>
  </div>
<% end %>