  <div class="row">
    <%= render 'list', user: @user, book: @newbook %>
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">
      <tbody>
          <tr>
            <td>
              <%= link_to user_path(@book.user_id) do %>
                <%= image_tag @book.user.get_profile_image(100, 100) %>
                <p><%= @book.user.name %></p>
              <% end %>
            </td>
            <td>
              <%= link_to book_path(@book.id) do %>
                <%= @book.title %>
              <% end %>
              </td>
            <td><%= @book.body %></td>
            <td><%= link_to "Edit", edit_book_path(@book.id) %></td>
            <td class><%= link_to "Destroy", book_path(@book.id), method: :delete, "data-confirm" => "Are you sure?" %></td>
          </tr>
      </tbody>
    </table>
    </div>
  </div>
