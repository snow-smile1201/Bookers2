
      <%= image_tag user.get_profile_image(100, 100) %>
      <table class="table">
        <tbody>
          <tr>
            <th>name</th>
            <th><%= user.name %></th>
          </tr>
          <tr>
            <th>
              introduction
            </th>
            <th>
              <%= user.introduction %>
            </th>
          </tr>
          <tr>
            <th>follows</th>
            <th>
              <%= link_to user.followings.count, user_followings_path(user) %>
            </th>
          </tr>
          <tr>
            <th>followers</th>
            <th>
              <%= link_to user.followers.count, user_followers_path(user) %>
            </th>
          </tr>
        </tbody>
      </table>
      <div class="row w-100">
        <% if current_user != user %>
          <td><%= render "relationships/btn", user: user %></td>
        <% else %>
          <%= link_to edit_user_path(user.id), class:"btn btn-block btn-outline-secondary btn-sm" do %>
          <i class="fas fa-user-cog"></i>
          <% end %>
        <% end %>
      </div>


