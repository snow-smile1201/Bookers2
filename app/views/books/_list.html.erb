<div class="col-md-3">
      <h2>User info</h2>
      <%= image_tag user.get_profile_image(100, 100) %>
      <table class="table">
        <tbody>
          <tr>
            <th>name</th>
            <th><%= user.name %></th>
          </tr>
          <tr>
            <th>
              introduction
            </th>
            <th>
              <%= user.introduction %>
            </th>
          </tr>
        </tbody>
      </table>
      <div class="col-12 mx-auto">
        <%= link_to edit_user_path(current_user.id), class:"btn btn-block btn-outline-secondary btn-sm" do %>
        <i class="fa-solid fa-user-gear"></i>
        <% end %>
      </div>

      <h2>New book</h2>

      <%= form_with model: book, local: true do |f| %>
        <div class="field">
          <label>Title</label>
       <div><%= f.text_field :title %></div>
        </div>
        <div class="field">
          <label>Opinion</label>
        <div><%= f.text_area :body %></div>
        </div>
        <%= f.submit 'Create Book', class: "btn btn-success" %>
      <% end %>
    </div>