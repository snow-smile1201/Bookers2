<% book.book_comments.each do |book_comment| %>
<table>
  <tr>
    <td>
      <%= link_to user_path(book_comment.user) do %>
        <%= image_tag book_comment.user.get_profile_image(80, 80) %>
        <p><%= book_comment.user.name %></p>
      <% end %>
    </td>
    <td>
      <%= book_comment.comment %>
    </td>
    <% if current_user == book_comment.user %>
      <td>
        <%= link_to "destroy", book_book_comment_path(book, book_comment ),method: :delete, class:"btn btn-danger" %>
      </td>
    <% end %>
  </tr>
</table>
<% end %>