<h1>users#show 現ユーザーの全投稿一覧</h1>

<h2>Books</h2>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Boby</th>
      <th colspan3></th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
      <td>
        <%= link_to book_path(book.id) do %>
          <%= book.title %>
        <% end %>
      </td>
      <td><%= book.body %></td>
      <td><%= link_to "Edit", edit_book_path(book.id) %></td>
      <td class><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %></td>
    </tr>
    <% end %>
  </tbody>
</table>