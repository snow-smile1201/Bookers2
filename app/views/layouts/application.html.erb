<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <script src="https://kit.fontawesome.com/0ccf06e068.js" crossorigin="anonymous"></script>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="container-fluid">
      <div classs="row px-5 py-2">
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark px-5">
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown"
                          aria-controls="navbarNavDropdown" aria-expand="false" aria-label="Toggle navigation">
            <span class"navbar-toggler-icon"></span>
          </button>
          <div class="col-2 px-5">
            <a class="navbar-brand" href="/"><span>Bookers</span></a>
            </div>
              <div class="collapse navbar-collapse px-5" id="navbarNavDropdown">
                <ul class="navbar-nav ml-auto">
                  <% if user_signed_in? %>
                  <li>
                    <%= link_to(user_path(current_user.id), class:"nav-link text-light") do %>
                     <i class="fa-solid fa-house"></i><span>Home</span>
                     <% end %>
                  </li>
                  <li>
                    <%= link_to(users_path, class:"nav-link text-light") do %>
                    <i class="fa-solid fa-users"></i><span>Users</span>
                    <% end %>
                  </li>
                  <li>
                    <%= link_to(books_path, class:"nav-link text-light") do %>
                    <i class="fa-solid fa-book-open"></i><span>Books</span>
                    <% end %>
                  </li>
                  <li>
                    <%= link_to(destroy_user_session_path, method: :delete, class:"nav-link text-light") do %>
                    <i class="fa-solid fa-right-from-bracket"></i><span>Log out</span>
                    <% end %>
                  </li>
                  <% else %>
                  <li>
                    <%= link_to(root_path, class:"nav-link text-light") do  %>
                    <i class="fa-solid fa-house text-light"></i><span>Home</span>
                    <% end %>
                  </li>
                  <li>
                    <%= link_to(about_path, class:"nav-link text-light") do %>
                    <i class="fa-solid fa-link"></i><span>About</span>
                    <% end %>
                  </li>
                  <li>
                    <%= link_to(new_user_registration_path, class:"nav-link text-light") do %>
                    <i class="fa-solid fa-user-plus"></i><span>Sign Up</span>
                    <% end %>
                  </li>
                  <li>
                    <%= link_to(new_user_session_path, class:"nav-link text-light") do %>
                    <i class="fa-solid fa-right-to-bracket"></i><span>Log in</span>
                    <% end %>
                  </li>
                  <% end %>
                </ul>
            </div>
          </nav>
        </div>
    </header>
    <main class="container mt-3 px-5">
      <div>
        <%= flash[:notice] %>
      </div>
      <%= yield %>
    </main>
    <fotter>
      <div class="container mt-5">
        <div class="row">
          <div class="mx-auto">
            <p>CopyRight Infratop.inc</p>
          </div>
        </div>
      </div>
    </fotter>
  </body>

</html>
